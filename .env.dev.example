# Copy to .env.dev and edit for local docker usage
# Postgres settings used by docker-compose and by backend (DATABASE_URL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=central_library
# Backend settings
PORT=3001
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}
AUTH_TOKEN=dev-token
AUTH_USERNAME=admin
AUTH_PASSWORD=admin
JWT_SECRET=dev-secret
JWT_EXPIRES_IN=1d
CORS_ORIGIN=http://localhost:5173
AUTO_CREATE_DB=true

# NOTE: This file is for local dev with Docker. Do NOT use these defaults in production.
