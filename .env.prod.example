# Production example env for docker-compose.prod.yml
# Copy to .env.prod and set strong values.

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG
POSTGRES_DB=central_library

# API
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG@db:5432/central_library
CORS_ORIGIN=https://your-frontend-domain.example

# Optional env-admin login (disabled by default). Prefer DB users instead.
ENABLE_ENV_ADMIN=false
AUTH_USERNAME=
AUTH_PASSWORD=
JWT_SECRET=change-me-super-strong-random
JWT_EXPIRES_IN=1d

# Registration policy
DISABLE_REGISTRATION=true

# Password hashing cost (bcrypt rounds). Typical: 10-12.
PASSWORD_SALT_ROUNDS=10

# Optional
AUTH_TOKEN=
OPENAI_API_KEY=
AI_TIMEOUT_MS=10000

# Frontend runtime config (nginx)
WEB_API_URL=https://your-api-domain.example
