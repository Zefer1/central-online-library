PORT=3001
DATABASE_URL=postgres://postgres:postgres@localhost:5432/central_library
AUTH_TOKEN=dev-token
AUTH_USERNAME=admin
AUTH_PASSWORD=admin
# Only used in production if explicitly enabled.
ENABLE_ENV_ADMIN=false
JWT_SECRET=dev-secret
JWT_EXPIRES_IN=1d
CORS_ORIGIN=http://localhost:5173
AUTO_CREATE_DB=false

# Registration policy
# Set to true in production if you want to disable open self-signup.
DISABLE_REGISTRATION=false

# Password hashing cost (bcrypt rounds). Typical: 10-12.
PASSWORD_SALT_ROUNDS=10

# Production checklist (do not use dev defaults):
# - Set JWT_SECRET to a strong random value
# - Change AUTH_USERNAME/AUTH_PASSWORD
# - Set CORS_ORIGIN to your frontend URL(s)
# - Keep AUTO_CREATE_DB=false
